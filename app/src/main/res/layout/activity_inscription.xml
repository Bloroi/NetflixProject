<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alexandre.netflixlibraryproject.InscriptionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username : "
        android:textSize="20dip"/>

    <EditText
        android:id="@+id/et_inscription_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex: Juju1997"
        android:inputType="text"
        android:layout_marginBottom="15dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password : "
        android:textSize="20dip"/>

    <EditText
        android:id="@+id/et_inscription_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex:vbf54d8d44"
        android:inputType="textPassword"
        android:layout_marginBottom="15dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom : "
        android:textSize="20dip"/>

    <EditText
        android:id="@+id/et_inscription_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex: Jullien"
        android:inputType="text"
        android:layout_marginBottom="15dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prénom : "
        android:textSize="20dip"/>

    <EditText
        android:id="@+id/et_inscription_prenom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex: Benoît"
        android:inputType="text"
        android:layout_marginBottom="15dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email : "
        android:textSize="20dip"/>

    <EditText
        android:id="@+id/et_inscription_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex: myemail@gmail.com"
        android:inputType="text"
        android:layout_marginBottom="15dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number : "
        android:textSize="20dip"/>

    <EditText
        android:id="@+id/et_inscription_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex: 0492 56 56 56"
        android:inputType="text"
        android:layout_marginBottom="15dip"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_inscription_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"/>

        <Button
            android:id="@+id/btn_inscription_checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check in"/>

    </LinearLayout>

</LinearLayout>
